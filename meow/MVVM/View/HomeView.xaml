<UserControl x:Class="design.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:design.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             FontFamily="/Fonts/#Archivo Black">
    
    <StackPanel HorizontalAlignment="Center" >
        <TextBlock Text="«Не откладывай на сегодня вопросы, ответы на которые&#xA; ты мог получить ещё вчера»" 
                 Foreground="#495B5B"
                 FontSize="32"
                 Margin="20 20 20 0"/>
        <Label Content="&#xA; — Годо"
               Foreground="#495B5B"
               HorizontalAlignment="Right"
                FontSize="32"
               Margin="0 -30 0 0"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
          
                <TextBlock x:Name="dfw" x:Uid="a" Grid.Column="0" Grid.Row="0" Text="ПОНЕДЕЛЬНИК, 22 апреля "
                   Foreground="#495B5B"
                   FontSize="32"
                   Margin="0 20 20 20"
                   HorizontalAlignment="Left"/>
                <TextBlock  Grid.Column="1" Grid.Row="0"
                    Text="Сегодня"
                    Foreground="#495B5B"
                    FontSize="32"
                    Margin="100 20 150 0" HorizontalAlignment="Left" />
                   
        </Grid>
       

        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15 0 0 0"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Padding" Value="10"/>
                </Style>
            </StackPanel.Resources>
          
            <StackPanel Margin="20 20 20 20" Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Height="700" Width="450">
                <Border CornerRadius="100">
                    
                    <TextBlock Height="175" Padding="10" Style="{StaticResource TextblockTheme}" >
                    <!--<Image Source="yourImage.jpg"/>-->

                    </TextBlock>
                </Border>
                <TextBlock Height="175" Style="{StaticResource TextblockTheme}" Text="First line"/>
                <TextBlock Height="175" Style="{StaticResource TextblockTheme}" Text="Second line"/>
                <TextBlock Height="175" Style="{StaticResource TextblockTheme}" Text="Third line"/>
                  

            </StackPanel>
        </StackPanel>

        <Button Grid.Row="2" Grid.RowSpan="2"
                Content="Добавить встречу"  
                HorizontalAlignment="Right"
                Margin="0 500 0 0"
         Style="{StaticResource LightButtonTheme}"
         FontSize="24"
         FontFamily="/Fonts/#Archivo SemiBold"/>
