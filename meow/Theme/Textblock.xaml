<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TextblockTheme" TargetType="{x:Type TextBlock}">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#30A1A1" ShadowDepth="0"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Block.BorderBrush" Value="Black"/>
        <!--BasedOn="{StaticResource baseStyle}"-->
      
        <Setter Property="Margin" Value="5" />
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#495B5B"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <!--<Border.Clip>
        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0 0 400 200" />
    </Border.Clip>-->


</ResourceDictionary>  